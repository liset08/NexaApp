<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
>
    <!-- Bloque Contenido -->
    /////start///////////

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2d0507"

            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:id="@+id/SliderDots">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"

                android:orientation="vertical"
                >
            <ImageView
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:background="@drawable/ic_logo"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                >


                <GridLayout
                    android:id="@+id/mainGrid2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:alignmentMode="alignMargins"
                    android:layout_marginTop="20dp"
                    android:columnCount="3"
                    android:columnOrderPreserved="false"
                    android:listSelector="#0f0"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:paddingBottom="0dp"
                    android:rowCount="3"
                    tools:targetApi="ice_cream_sandwich"
                    tools:ignore="UselessParent">

                    <!-- Row 1 -->

                    <!-- Column 1 -->
                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:cardBackgroundColor="@android:color/white"
                        android:layout_columnWeight="1"
                        android:onClick="Registro"
                        app:cardCornerRadius="0dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        app:cardElevation="2dp"
                        android:layout_rowWeight="1"

                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginTop="20dp"
                                android:src="@drawable/img_hiring"

                                android:layout_gravity="center_horizontal"
                            />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"

                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="SuperviciÃ³n"
                                    android:textAlignment="center"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@android:color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />


                            </LinearLayout>



                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <!-- Column 2 -->
                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:cardBackgroundColor="@android:color/white"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="0dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:onClick="SearchPlaca"
                        app:cardElevation="2dp"
                        android:layout_rowWeight="1"

                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:layout_gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginTop="20dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_car_repair"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"

                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="BÃºsqueda por placa"
                                    android:textAlignment="center"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@android:color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />


                            </LinearLayout>



                        </LinearLayout>


                    </android.support.v7.widget.CardView>                    <!-- Column 1 -->
                                       <!-- Column 1 -->

                    <!-- Column 2 -->
                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:cardBackgroundColor="@android:color/white"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="0dp"
                        android:onClick="Alarma"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        app:cardElevation="2dp"
                        android:layout_rowWeight="1"

                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginTop="20dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_access_denied"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"

                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Alerta"
                                    android:textAlignment="center"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@android:color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />


                            </LinearLayout>



                        </LinearLayout>


                    </android.support.v7.widget.CardView>                    <!-- Column 1 -->







                </GridLayout>


            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

    //////////////////7777




    //////////////////////////77

    /////////////////////////
</ScrollView>
